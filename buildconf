# buildconf
#
# This is the default configuration used to build spmenu. The build.sh script reads it.
imlib2=true
pango=true
pangoxft=true
xinerama=true
openssl=true
fribidi=true
libconfig=true
cc=gcc
opt=-O2
warn=true
install=true

# mac
if [ -d "/System/Library/Extensions" ]; then
    imlib2=false
    pango=false
    pangoxft=false
    openssl=false
    prefix=/usr/local
    makebin=gnumake
fi
